<div class="content-wrap">

    {% for block in section.blocks %}
        <div class="content-block-{{ block.type }}" {{ block_shopify_attributes }}>
            {% case block.type %}
                {% when 'collection' %}
                    {% assign collection = collections[block.settings.collection] %}
                    {{ collection.title }}
                    {{ collection.description }}
                {% else %}
            {% endcase %}
        </div>
    {% endfor %}
</div>

{% schema %}
{
    "name": "Page Content",
    "class": "page-content-section",
    "blocks": [
      {
        "type": "collection",
        "name": "Collection",
        "settings": [
          {
            "id": "collection",
            "type": "collection",
            "label": "Collection"
          },
          {
            "id": "max_products",
            "type": "range",
            "min": 2,
            "max": 6,
            "step": 1,
            "unit": "ct",
            "label": "Products to Show",
            "default": 2
          },
          {
            "id": "title",
            "type": "text",
            "label": "Title",
            "info": "Defaults to Collection Title"
          },
          {
            "id": "content",
            "type": "textarea",
            "label": "Content"
          },
          {
            "id": "show_button",
            "type": "checkbox",
            "label": "Show Button?",
            "default": true
          },
          {
            "id": "button_text",
            "type": "text",
            "label": "Button Text",
            "placeholder": "Shop Now",
            "info": "Defaults to \"Shop Now\""
          }
        ]
      },
      {
        "type": "image_text",
        "name": "Image & Text",
        "settings": [
          {
            "id": "image",
            "type": "image_picker",
            "label": "Image"
          },
          {
            "id": "title",
            "type": "text",
            "label": "Title",
            "info": "Defaults to Collection Title"
          },
          {
            "id": "content",
            "type": "textarea",
            "label": "Content"
          },
          {
            "id": "show_button",
            "type": "checkbox",
            "label": "Show Button?",
            "default": true
          },
          {
            "id": "button_url",
            "type": "url",
            "label": "Button URL"
          },
          {
            "id": "button_text",
            "type": "text",
            "label": "Button Text",
            "placeholder": "Shop Now",
            "info": "Defaults to \"Shop Now\""
          },
          {
            "id": "direction",
            "type": "select",
            "label": "Direction",
            "options": [
              {
                "value": "rtl",
                "label": "Image -> Text"
              },
              {
                "value": "ltr",
                "label": "Text -> Image"
              }
            ]
          },
          {
            "id": "bgcolor",
            "type": "select",
            "label": "Background Color",
            "options": [
              {
                "value": "white",
                "label": "White"
              },
              {
                "value": "black",
                "label": "Black"
              }
            ],
            "default": "white"
          }
        ]
      },
      {
        "type": "quote",
        "name": "Quote",
        "settings": [
          {
            "id": "content",
            "type": "textarea",
            "label": "Content"
          },
          {
            "id": "source",
            "type": "textarea",
            "label": "Source"
          },
          {
            "id": "show_button",
            "type": "checkbox",
            "label": "Show Button?",
            "default": true
          },
          {
            "id": "button_url",
            "type": "url",
            "label": "Button URL"
          },
          {
            "id": "button_text",
            "type": "text",
            "label": "Button Text",
            "placeholder": "Read More",
            "info": "Defaults to \"Read More\""
          }
        ]
      }
    ],
    "default": {}
  }
{% endschema %}