{% if label == blank %}
    {% assign label = 'search.form.label' | t %}
{% endif %}

<form action="/search" method="get" role="search">
    <label id="search-term" for="{{ label }}"></label>
    <input id="search-term" type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'search.form.placeholder' | t }}">
    <button type="submit">{{ 'search.form.submit' | t }}</button>
</form>